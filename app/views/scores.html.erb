<table class="table table-hover">
  <thead>
    <tr>
      <th>Player</th>
      <th>Attempts</th>
      <th>Time</th>
    </tr>
  </thead>
  <tbody>
  <% load_scores.each do |s| %>
    <tr>
      <td><%= s.username %></td>
      <td><%= s.attempts %></td>
      <td><%= (s.finish_at - s.start_at).to_i %>s</td>
    </tr>
  <% end %>
  </tbody>
</table>

<div class="buttons">
  <a href="/start" class="btn btn-success">Start new game</a>
  <a href="/" class="btn btn-primary">Back</a>
</div>
